{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "crates-updater": "dist/cli.js",
    "update-crates": "dist/cli.js"
  },
  "dependencies": {
    "commander": "2.20.0",
    "compare-versions": "3.4.0",
    "crates.io": "0.4.0"
  },
  "description": "Check your Rust packages for updates.",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.5",
    "@ffflorian/tslint-config": "0.2.2",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/git": "7.0.12",
    "@types/node": "~12",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.16",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.2"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "typescript",
    "cratesio",
    "rust",
    "cli"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "name": "crates-updater",
  "prettier": "@ffflorian/prettier-config",
  "repository": "https://github.com/ffflorian/crates-updater",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "prettier": "prettier \"*.{json,md}\"",
    "release": "semantic-release",
    "test": "exit 0"
  },
  "version": "0.4.0"
}
